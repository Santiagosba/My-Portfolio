<style>
  .project-card {
    @apply relative bg-gradient-to-br border border-white/20 rounded-3xl shadow-xl p-6 
           hover:scale-[1.03] transition-transform duration-300 backdrop-blur-lg;
  }
  .project-img {
    @apply rounded-2xl w-full object-cover h-48 shadow-lg;
  }
  .project-title {
    @apply mt-4 text-2xl font-bold text-white drop-shadow-md;
  }
  .project-desc {
    @apply mt-2 text-white/90 text-sm leading-relaxed;
  }
  .project-tags {
    @apply flex gap-3 mt-4;
  }
  .project-links {
    @apply flex gap-4 mt-6;
  }
  .btn {
    @apply px-4 py-2 rounded-xl text-sm font-medium text-white bg-white/10 border border-white/30 backdrop-blur-md shadow-md;
    transition: all 0.3s ease;
  }
  .btn:hover {
    @apply bg-cyan-400/30 border-white/60 scale-105;
    box-shadow: 0 0 15px rgba(0, 200, 255, 0.6);
  }
</style>
