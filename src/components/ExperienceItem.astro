---
interface Props {
  title: string;
  description: string;
  link?: string;
  date: string;
}
const { title, description, link, date } = Astro.props;
---

<div
  class="animate-fade-in tracking-wide relative pl-14 pr-6 py-6 rounded-3xl
    bg-white/10 backdrop-blur-xl
    border border-white/20
    shadow-[inset_0_0_16px_rgba(255,255,255,0.1),_0_4px_20px_rgba(255,255,255,0.05)]
    hover:shadow-[inset_0_0_30px_rgba(255,255,255,0.25),_0_6px_30px_rgba(255,255,255,0.08)]
    transition-shadow duration-500 ease-in-out
    before:absolute before:inset-0 before:rounded-3xl before:content-['']
    before:pointer-events-none
    before:bg-[linear-gradient(120deg,transparent_0%,rgba(255,255,255,0.15)_50%,transparent_100%)]
    before:animate-sheen
  "
>
  <!-- Punto con apariencia de esfera de vidrio oscuro -->
  <div
    class="absolute top-7 left-6 w-3.5 h-3.5 bg-gray-800 rounded-full
      border-2 border-white/30 shadow-[0_0_12px_rgba(0,0,0,0.7),inset_0_0_6px_rgba(255,255,255,0.15)]"
  ></div>

  <time class="mb-1 text-sm font-normal leading-none text-gray-300 dark:text-gray-400">
    {date}
  </time>
  <h3 class="text-xl font-semibold text-white">{title}</h3>
  <p class="mb-4 text-base font-normal text-gray-300 dark:text-gray-400">
    {description}
  </p>

  {link && (
    <a
      href={link}
      class="inline-flex items-center px-4 py-2 text-sm font-medium
        text-white bg-white/10 border border-white/30 rounded-lg
        backdrop-blur-md shadow-[0_0_12px_rgba(255,255,255,0.15)]
        hover:bg-white/20 hover:shadow-[0_0_24px_rgba(255,255,255,0.4)]
        transition duration-300 ease-out"
      target="_blank"
      rel="noopener noreferrer"
    >
      Saber m√°s ...
      <svg
        class="w-3 h-3 ms-2 rtl:rotate-180"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 14 10"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 5h12m0 0L9 1m4 4L9 9"
        />
      </svg>
    </a>
  )}
</div>
