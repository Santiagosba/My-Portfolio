---
import Badge from "../components/Badge.astro";
import LinkedinIcon from "../components/icons/LinkedinIcon.astro";
import Layout from "../layouts/Layout.astro";
import GitHubIcon from "../components/icons/GitHubIcon.astro";
import SocialPill from "../components/SocialPill.astro";
import Mailicon from "../components/icons/Mailicon.astro";
import InstagramIcon from "../components/icons/InstagramIcon.astro";
import XIcon from "../components/icons/XIcon.astro";
import Experience from "../components/Experience.astro";
import SectionConteiner from "../components/SectionConteiner.astro";
import BriefcaseIcon from "../components/icons/BriefcaseIcon.astro";
import CodeIcon from "../components/icons/CodeIcon.astro";
import Projects from "../components/Projects.astro";
---

<Layout
  title="Portfolio de Santiago Benítez Álvarez - Desarrollador y Programador web"
  description="Contrata a Santiago para crear tu aplicación Web. Desarrollador Web y de Contenido. Especializado en crear webs únicas"
>
  <main>
    <!-- HOME -->
    <SectionConteiner id="Home" class="py-44 pb-24">
      <img
        class="rounded-full w-50 h-40 ml-3 text-4xl md:text-5xl font-semibold text-white drop-shadow-[0_2px_6px_rgba(173,216,230,0.5)] mb-12 animate-fade-in tracking-wide"
        src="/Santydev_photo/_DSC7034.webp"
        alt="Foto de Santiago Benítez Álvarez"
      />
      <h1 id="About" class="ml-3 text-4xl md:text-5xl font-semibold text-white drop-shadow-[0_2px_6px_rgba(173,216,230,0.5)] mb-14 animate-fade-in tracking-wide">
        Hey, I'm Santiago Benítez Álvarez
        <a href="https://es.linkedin.com/in/santiagosba" target="_blank" rel="noopener noreferrer" class=" ml-2 relative -top-2 drop-shadow-[0_2px_6px_rgba(173,216,230,0.5)] animate-fade-in tracking-wide inline-block">
          <Badge>Open to work</Badge>
        </a>
      </h1>
      <h2 class="ml-3 text-2xl md:text-2xl font-semibold text-white drop-shadow-[0_2px_6px_rgba(173,216,230,0.5)] mb-12 animate-fade-in tracking-wide">
        <span>More than two years of experience.</span>
        <span class="text-blue-300"> Web Developer.</span>
        Based in <span class="text-red-300">Barcelona, España <img src="https://flagcdn.com/es.svg" alt="Bandera de España" class="inline w-8 h-5 align-middle"/></span>.
        <span class="opacity-80">Specialized in creating unique applications.</span>
      </h2>

      <nav class="mt-10 animate-fade-in tracking-wide flex flex-wrap gap-4">
        <SocialPill href="https://es.linkedin.com/in/santiagosba" label="LinkedIn">
          <LinkedinIcon class="w-5 h-5 icon-glow" />
        </SocialPill>
        <SocialPill href="https://github.com/Santiagosba" label="GitHub">
          <GitHubIcon class="w-5 h-5 icon-glow" />
        </SocialPill>
        <SocialPill href="mailto:santiagosba888@gmail.com" label="Email">
          <Mailicon class="w-5 h-5 icon-glow" />
        </SocialPill>
      </nav>
    </SectionConteiner>

    <!-- EXPERIENCE -->
    <SectionConteiner id="Experience">
      <h2 class="mt-28 ml-3 text-4xl md:text-5xl font-semibold text-white drop-shadow-[0_2px_6px_rgba(173,216,230,0.5)] mb-12 animate-fade-in tracking-wide flex items-center gap-2">
        <BriefcaseIcon class="w-10 h-10 drop-shadow-[0_2px_6px_rgba(173,216,230,0.5)]"/>
        Experience
      </h2>
      <Experience />
    </SectionConteiner>

    <!-- PROJECTS -->
    <SectionConteiner id="Projects">
      <h2 class="mt-28 ml-3 text-4xl md:text-5xl font-semibold text-white drop-shadow-[0_2px_6px_rgba(173,216,230,0.5)] mb-12 animate-fade-in tracking-wide flex items-center gap-2">
        <CodeIcon class="w-12 h-12 drop-shadow-[0_2px_6px_rgba(173,216,230,0.5)]"/>
        Projects
      </h2>
      <div class="mt-14 ml-3 max-w-5xl mx-auto">
        <p class="text-3xl md:text-3xl font-semibold text-white drop-shadow-[0_2px_6px_rgba(173,216,230,0.5)] mb-12 animate-fade-in tracking-wide">
          Here are some of my most notable projects, where I have applied my skills in web development and programming.
        </p>
        <Projects />
      </div>
    </SectionConteiner>
  </main>
</Layout>
